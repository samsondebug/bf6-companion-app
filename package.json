{
  "name": "bf6-companion",
  "version": "0.1.0",
  "description": "All-in-one Battlefield 6 companion desktop app (Electron + React + Tailwind + Node + SQLite + ffmpeg).",
  "license": "MIT",
  "author": "BF6C Beta",
  "private": true,
  "main": "dist/backend/main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "node ./scripts/dev.mjs",
    "dev:renderer": "vite --config app/frontend/vite.config.ts",
    "dev:main": "ts-node --project backend/tsconfig.json backend/main.ts",
    "build": "node ./scripts/build.mjs",
    "package": "node ./scripts/package.mjs",
    "zip": "node ./scripts/zip.mjs",
    "test": "vitest run"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "electron-updater": "^6.1.1",
    "keytar": "^7.9.0",
    "pino": "^8.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rss-parser": "^3.12.0",
    "sqlite3": "^5.1.6",
    "tesseract.js": "^4.0.2",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/chokidar": "^2.1.3",
    "@types/node": "^20.3.1",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "archiver": "^6.0.1",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "electron": "^28.3.3",
    "electron-builder": "^24.6.0",
    "postcss": "^8.4.23",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vite": "^4.2.1",
    "vitest": "^0.33.0"
  }
}
